<html>
    <head>
        <title><%= title %></title>
    </head>
    <body>
        <h1><%= title %></h1>
        <a href="/new">Add a new message</a>

        <ul>
            <% messages.forEach((message) => { %>
                <li>
                    <strong><%= message.user %></strong> : <%= message.text %>
                    <br>
                    <em>Posted: <%= new Date(message.added).toLocaleString() %></em>
                    <a href="/message/<%= message.id %>">Open</a>
                </li>
           <% }) %>
        </ul>

    </body>
</html>
